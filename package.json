{
  "name": "phishnet",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "type": "module",
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "install:all": "pnpm install",
    "dev": "echo \"(placeholder) run concurrent dev (frontend+backend)\"",
    "dev:backend": "echo \"(placeholder) run backend dev server\"",
    "dev:frontend": "echo \"(placeholder) run frontend dev server\"",
    "typecheck": "echo \"(placeholder) run tsc -b\"",
    "lint": "echo \"(placeholder) run eslint .\"",
    "format": "echo \"(placeholder) run prettier --write\"",
    "test:unit": "vitest run --coverage",
    "test:integration": "echo \"(placeholder) backend integration tests (future)\"",
    "test:watch": "vitest watch",
    "coverage": "vitest run --coverage",
    "clean": "echo \"(placeholder) rimraf node_modules dist coverage\"",
    "prepare": "husky install || echo 'husky optional during bootstrap'",
    "release:dry": "semantic-release --dry-run --no-ci"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.3.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/release-notes-generator": "^14.0.0",
    "@vitest/coverage-v8": "^1.6.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.2",
    "remark-cli": "^11.0.0",
    "semantic-release": "^23.0.0",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": ["eslint --cache --max-warnings=0"],
    "*.{md,mdx}": ["remark --no-stdout --silent || true"],
    "*.{json,yml,yaml}": ["prettier --write"],
    "*.{ts,tsx,js,jsx,json,md,mdx,yml,yaml}": ["prettier --write"]
  }
}